@page "/settings"
@page "/settings/{Component}"
@page "/settings/{Component}/{Edit}"
@page "/settings/{Component}/{Edit}/{Id}"
@inject IStringLocalizer<Settings> L

<MudGrid>
    <MudItem xs="3">
            <FshTitle Title="@L["Settings"]" Description="@L["Manage Hotel Settings."]"/>
            <MudNavMenu Class="mud-elevation-1">
                <MudNavLink Href="/settings/rooms" Icon="@Icons.Material.Filled.Room">
                    @L["Rooms"]
                </MudNavLink>
                <MudNavLink Href="/settings/categories" Icon="@Icons.Material.Filled.Category">
                    @L["Room Categories"]
                </MudNavLink>
                <MudNavLink Href="/settings/types" Icon="@Icons.Material.Filled.TypeSpecimen">
                    @L["Room Types"]
                </MudNavLink>
                <MudNavLink Href="/settings/typeProperties" Icon="@Icons.Material.Filled.List">
                    @L["Room Properties"]
                </MudNavLink>
                <MudNavLink Href="/settings/beds" Icon="@Icons.Material.Filled.Bed">
                    @L["Room Beds"]
                </MudNavLink>
                <MudNavLink Href="/settings/tariffs" Icon="@Icons.Material.Filled.MonetizationOn">
                    @L["Tariffs"]
                </MudNavLink>
            </MudNavMenu>
    </MudItem>
    <MudItem xs="9">
        @switch (Component)
        {
            case "rooms":
                <EditRooms/>
                break;
            case "categories":
                <EditRoomCategories/>
                break;
            case "types":
                @if (!string.IsNullOrEmpty(Edit))
                {
                    <EditRoomType Id="@Id" />
                }
                else
                {
                    <RoomTypes />
                }
                break;
            case "beds":
                <EditRoomBeds/>
                break;
            case "typeProperties":
                    <EditRoomTypeProperties />
                break;
            case "tariffs":
                <EditTariff/>
                break;
            default:
                <EditRooms />
                break;
        }
    </MudItem>
</MudGrid>
